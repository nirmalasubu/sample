{
    "version": "0.2.0",
    "configurations": [       
        {
            "name": "ODT API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Debug-ODT-API",
            "program": "${workspaceRoot}/OnDemandTools.API/bin/Debug/netcoreapp1.1/OnDemandTools.API.dll",
            "args": [],
            "cwd": "${workspaceRoot}/OnDemandTools.API",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/Views"
            }
        },
        {
